<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.category.CategoryFragment"
    android:theme="@style/Theme.ChatGPTWidget.Container.Dark">

    <Button
        android:id="@+id/btn_text_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_completion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_code_completion"
        android:background="@drawable/btn_stadium_bg"
        android:paddingHorizontal="15dp"
        />

    <Button
        android:id="@+id/btn_code_completion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_completion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_text_completion"
        app:layout_constraintBottom_toTopOf="@id/btn_generate_images"
        android:background="@drawable/btn_stadium_bg"
        android:paddingHorizontal="15dp"
        />


    <Button
        android:id="@+id/btn_generate_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/generate_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_code_completion"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_stadium_bg"
        android:paddingHorizontal="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>